{
    "name": "nasm-runner",
    "displayName": "NASM Runner para Windows",
    "description": "Compila y ejecuta archivos NASM directamente desde VSCode en Windows",
    "version": "1.1.0",
    "publisher": "Hanielcruz",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": ["Other"],
    "keywords": ["nasm", "assembly", "compile", "run", "windows", "compilador", "ensamblador", "ejecutar"],
    "icon": "icon.png",
    "activationEvents": ["onCommand:nasm-runner.runFile"],
    "main": "./extension.js",
    "contributes": {
        "commands": [{
            "command": "nasm-runner.runFile",
            "title": "Compilar y Ejecutar NASM"
        }],
        "menus": {
            "explorer/context": [{
                "command": "nasm-runner.runFile",
                "group": "navigation",
                "when": "resourceExtname in ['.asm', '.nasm', '.s', '.txt']"
            }],
            "editor/context": [{
                "command": "nasm-runner.runFile", 
                "group": "navigation",
                "when": "resourceExtname in ['.asm', '.nasm', '.s', '.txt']"
            }]
        },
        "configuration": {
            "title": "NASM Runner",
            "properties": {
                "nasmRunner.architecture": {
                    "type": "string",
                    "default": "win32",
                    "enum": ["win32", "win64"],
                    "description": "Arquitectura objetivo para la compilación"
                },
                "nasmRunner.keepObjFiles": {
                    "type": "boolean",
                    "default": false,
                    "description": "Conservar archivos .obj después de ejecutar"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Cqrbono14/nasm-runner"
    },
    "scripts": {
        "vscode:prepublish": "echo 'Prepublish completed'"
    }
}